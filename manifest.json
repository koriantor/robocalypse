{
  "manifest_version": 2,

  "name": "Robocalypse",
  "description": "Tool for tweeting as different Roberts.",
  "version": "0.1.1",

  "background": {
    "scripts": ["eventPage.js"],
	  "persistent": false
  },
  "content_scripts": [ 
	{
	  "matches": ["https://*.twitter.com/*"],
	  "css": ["popup.css"],
	  "js": ["jquery-3.2.1.min.js", "twitter.js"]
	}
  ],
  "incognito": "split",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}