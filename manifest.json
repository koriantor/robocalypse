{
  "manifest_version": 2,

  "name": "Robocalypse",
  "description": "Tool for tweeting as different Roberts.",
  "version": "0.2.0",

  "background": {
    "scripts": ["eventPage.js"],
	  "persistent": false
  },
  "incognito": "split",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}